{
	"name": "dovenv-monorepo",
	"private": true,
	"description": "Toolkit for make your code workspace easier. Create documentation, add beautiful commits, lint and much more.",
	"keywords": [
		"env",
		"devs",
		"development",
		"js",
		"ts",
		"cli",
		"library",
		"node",
		"binaries",
		"bin",
		"pigeonposse",
		"pp"
	],
	"homepage": "https://github.com/pigeonposse/dovenv",
	"bugs": {
		"url": "https://github.com/pigeonposse/dovenv/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/dovenv"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"-": "run() { pnpm --filter @dovenv/\"${@:1}\"; }; run $@",
		"-core": "pnpm --filter dovenv $@",
		"-create": "pnpm --filter @dovenv/create $@",
		"-doc": "pnpm --filter @dovenv/documentation $@",
		"-utils": "pnpm --filter @dovenv/utils $@",
		"b": "----------------------- BUILD ----------------------------",
		"build": "pnpm  run --sequential \"/build:.*/\"",
		"build:core": "pnpm --filter @dovenv/utils build && pnpm --filter dovenv build",
		"build:extra": "pnpm --filter create-dovenv build && pnpm --filter @dovenv/documentation build",
		"build:plugins": "pnpm --filter './packages/plugin/**' build",
		"build:templates": "pnpm --filter './packages/templates/**' build",
		"p": "----------------------- PKG UTILS ----------------------------",
		"pkg:exec": "node packages/core/dist/bin.mjs",
		"pkg:push": "node packages/core/dist/bin.mjs git push",
		"pkg:update": "node packages/core/dist/bin.mjs pkg update",
		"t": "----------------------- TESTS ----------------------------",
		"test": "pnpm run --sequential \"/test:.*/\"",
		"test:unit": "vitest run src --passWithNoTests"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@playwright/test": "1.48.2",
		"@types/node": "22.8.7",
		"tsx": "4.19.2",
		"typescript": "5.6.3",
		"unbuild": "2.0.0",
		"vitest": "2.1.4"
	},
	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"extra": {
		"id": "dovenv",
		"productName": "dovenv",
		"shortDesc": "All in one web API builder",
		"libraryUrl": "https://www.npmjs.com/package/backan",
		"licenseUrl": "https://github.com/pigeonposse/backan/blob/main/LICENSE",
		"libraryId": "backan",
		"repoId": "backan",
		"rawRepoUrl": "https://raw.githubusercontent.com/pigeonposse/backan",
		"docsUrl": "https://backan.pigeonposse.com",
		"docsPath": {
			"posts": "/posts/",
			"todo": "/todo/",
			"guide": "/guide/",
			"core": "/guide/core/",
			"server": "/guide/server",
			"create": "/guide/create",
			"builder": "/guide/builder"
		},
		"collective": {
			"id": "pigeonposse",
			"name": "PigeonPosse",
			"gh": "https://github.com/pigeonposse",
			"about": "https://pigeonposse.com?popup=about",
			"url": "https://pigeonposse.com",
			"web": "https://pigeonposse.com",
			"email": "dev@pigeonposse.com",
			"socialUser": {
				"twitter": "pigeonposse_",
