{
	"name": "dovenv-monorepo",
	"private": true,
	"description": "Quickly and easily set up your environment for your code projects. Create documentation pages with zeroconfig, add beautiful commits, and much more.",
	"keywords": [
		"env",
		"devs",
		"development",
		"js",
		"ts",
		"cli",
		"library",
		"node",
		"binaries",
		"bin",
		"pigeonposse",
		"pp"
	],
	"homepage": "https://github.com/pigeonposse/dovenv",
	"bugs": {
		"url": "https://github.com/pigeonposse/dovenv/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/dovenv"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"-": "run() { pnpm --filter=@dovenv/\"${@:1}\"; }; run $@",
		"ai": "pnpm --filter=@dovenv/ai $@",
		"core": "pnpm --filter=dovenv $@",
		"doc": "pnpm --filter=@dovenv/docs $@",
		"lint": "pnpm eslint",
		"preview": "node dist/bin.js --input=examples/server.ts",
		"push": "git add . && cz && git push -f origin $@",
		"test": "pnpm run --sequential \"/^test:.*/\"",
		"test:unit": "vitest run src --passWithNoTests",
		"update-version": "changeset && changeset version",
		"utils": "pnpm --filter=@dovenv/utils $@"
	},
	"commitlint": {
		"extends": [
			"gitmoji"
		],
		"rules": {
			"header-max-length": [
				0,
				"always",
				100
			]
		}
	},
	"lint-staged": {
		"*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json}": "eslint"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": ".dev/cz-config.cjs"
		}
	},
	"dependencies": {

	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.9",
		"@commitlint/cli": "19.5.0",
		"@types/node": "22.8.7",
		"commitizen": "4.3.1",
		"commitlint-config-gitmoji": "2.3.1",
		"cz-customizable": "7.2.1",
		"cz-emoji": "1.3.2-canary.2",
		"doctoc": "^2.2.1",
		"esbuild": "^0.24.0",
		"git-cz": "4.9.0",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"rimraf": "^6.0.1",
		"ts-node": "10.9.2",
		"tslib": "2.8.1",
		"tsx": "^4.19.2",
		"typescript": "5.6.3",
		"unbuild": "^2.0.0",
		"vite": "5.4.10",
		"vite-plugin-dts": "4.3.0",
		"vitest": "2.1.4"
	},
	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"extra": {
		"id": "dovenv",
		"productName": "dovenv",
		"shortDesc": "All in one web API builder",
		"libraryUrl": "https://www.npmjs.com/package/backan",
		"licenseUrl": "https://github.com/pigeonposse/backan/blob/main/LICENSE",
		"libraryId": "backan",
		"repoId": "backan",
		"rawRepoUrl": "https://raw.githubusercontent.com/pigeonposse/backan",
		"docsUrl": "https://backan.pigeonposse.com",
		"docsPath": {
			"posts": "/posts/",
			"todo": "/todo/",
			"guide": "/guide/",
			"core": "/guide/core/",
			"server": "/guide/server",
			"create": "/guide/create",
			"builder": "/guide/builder"
		},
		"collective": {
			"id": "pigeonposse",
			"name": "PigeonPosse",
			"gh": "https://github.com/pigeonposse",
			"about": "https://pigeonposse.com?popup=about",
			"url": "https://pigeonposse.com",
			"web": "https://pigeonposse.com",
			"email": "dev@pigeonposse.com",
			"socialUser": {
				"twitter": "pigeonposse_",
				"instagram": "pigeon.posse",
				"medium": "pigeonposse"
			},
			"social": {
				"twitter": "https://twitter.com/pigeonposse_",
				"instagram": "https://www.instagram.com/pigeon.posse/",
				"medium": "https://medium.com/@pigeonposse"
			}
		},
		"scopes": [
			{
				"name": "core"
			},
			{
				"name": "env"
			},
			{
				"name": "all"
			}
		]
	}
}
